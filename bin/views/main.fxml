<?xml version="1.0" encoding="UTF-8"?>

    <?import javafx.scene.control.*?>
    <?import javafx.scene.layout.*?>
    <?import javafx.scene.text.*?>

    <BorderPane xmlns="http://javafx.com/javafx/21.0.8" 
                xmlns:fx="http://javafx.com/fxml/1" 
                fx:controller="controllers.MainSceneController">
        
        
        <top>
            <MenuBar>
                <Menu text="Fichier">
                    <MenuItem text="Quitter" onAction="#handleQuit"/>
                </Menu>
                <Menu text="Gestion">
                    <MenuItem text="Clients" onAction="#handleShowClients"/>
                    <MenuItem text="Événements" onAction="#handleShowEvents"/>
                    <MenuItem text="Tickets" onAction="#handleShowTickets"/>
                </Menu>
            </MenuBar>
        </top>
        
        <center>
            <VBox alignment="CENTER" spacing="20">
                <Text text="Système de Gestion de Billetterie" 
                    style="-fx-font-size: 24; -fx-font-weight: bold; -fx-fill: #2E8B57;"/>
                
                
                <HBox alignment="CENTER" spacing="10">
                    <Label text="Titre de la fenêtre:"/>
                    <TextField fx:id="tfTitre" promptText="Entrez un titre"/>
                    <Button text="OK" onAction="#btnOk"/>
                </HBox>
                
                <HBox spacing="30" alignment="CENTER">
                    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                        <Button text="Gérer Clients" onAction="#handleShowClients" 
                                style="-fx-background-color: #1E90FF; -fx-text-fill: white; -fx-font-size: 14;"
                                prefWidth="150" prefHeight="50"/>
                        <Label text="CRUD complet des clients"/>
                    </VBox>
                    
                    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                        <Button text="Gérer Événements" onAction="#handleShowEvents" 
                                style="-fx-background-color: #2E8B57; -fx-text-fill: white; -fx-font-size: 14;"
                                prefWidth="150" prefHeight="50"/>
                        <Label text="Création et consultation"/>
                    </VBox>
                    
                    <VBox alignment="CENTER" spacing="10" style="-fx-padding: 20;">
                        <Button text="Gérer Tickets" onAction="#handleShowTickets" 
                                style="-fx-background-color: #FF8C00; -fx-text-fill: white; -fx-font-size: 14;"
                                prefWidth="150" prefHeight="50"/>
                        <Label text="Prise de billets"/>
                    </VBox>
                </HBox>
            </VBox>
        </center>
        
        <bottom>
            <Label text="TP Interfaces Graphiques - Billetterie" 
                style="-fx-padding: 10; -fx-text-fill: gray;"
                BorderPane.alignment="CENTER"/>
        </bottom>
    </BorderPane>