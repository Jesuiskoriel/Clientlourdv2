        <?xml version="1.0" encoding="UTF-8"?>

        <?import javafx.scene.control.*?>
        <?import javafx.scene.layout.*?>
        <?import javafx.geometry.Insets?>

        <VBox xmlns="http://javafx.com/javafx/11.0.1" 
                xmlns:fx="http://javafx.com/fxml/1" 
                fx:controller="controllers.TicketController"
                spacing="15" style="-fx-padding: 20;">
                
                <Label text="Formulaire Ticket" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
                
                <GridPane hgap="10" vgap="10">
                <columnConstraints>
                        <ColumnConstraints prefWidth="100"/>
                        <ColumnConstraints prefWidth="300"/>
                </columnConstraints>
                
                <Label text="Événement*" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <ComboBox fx:id="eventComboBox" GridPane.rowIndex="0" GridPane.columnIndex="1" 
                        promptText="Sélectionner un événement"/>
                
                <Label text="Client*" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="clientComboBox" GridPane.rowIndex="1" GridPane.columnIndex="1" 
                        promptText="Sélectionner un client"/>
                
                <Label text="Prix*" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="prixField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                
                <Label text="Date Achat*" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateAchatField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                </GridPane>
                
                <HBox spacing="10">
                <Button text="Créer" onAction="#handleCreateTicket" 
                        style="-fx-background-color: #2E8B57; -fx-text-fill: white;"/>
                <Button text="Modifier" onAction="#handleUpdateTicket" 
                        style="-fx-background-color: #1E90FF; -fx-text-fill: white;"/>
                <Button text="Supprimer" onAction="#handleDeleteTicket" 
                        style="-fx-background-color: #DC143C; -fx-text-fill: white;"/>
                <Button text="Effacer" onAction="#handleClearForm"/>
                </HBox>
        </VBox>