<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/21.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.TicketController">

    <!-- En-tête + filtres -->
    <top>
        <VBox spacing="10" style="-fx-padding: 15;">
            <Label text="Billets et paiements"
                   style="-fx-font-size: 20; -fx-font-weight: bold;"/>
            <HBox spacing="10">
                <TextField fx:id="filterField" promptText="Filtrer (client, événement, code)"
                           onAction="#handleFilter" HBox.hgrow="ALWAYS"/>
                <Button text="Filtrer" onAction="#handleFilter"/>
                <Button text="Actualiser" onAction="#handleRefresh"/>
            </HBox>
        </VBox>
    </top>

    <!-- Tableau des billets -->
    <center>
        <TableView fx:id="ticketTable">
            <BorderPane.margin>
                <Insets top="0" right="15" bottom="0" left="15"/>
            </BorderPane.margin>
            <columns>
                <TableColumn fx:id="codeColumn" text="Code" prefWidth="140"/>
                <TableColumn fx:id="clientColumn" text="Client" prefWidth="170"/>
                <TableColumn fx:id="eventColumn" text="Événement" prefWidth="200"/>
                <TableColumn fx:id="statutColumn" text="Statut" prefWidth="120"/>
                <TableColumn fx:id="dateColumn" text="Date d'achat" prefWidth="160"/>
                <TableColumn fx:id="prixColumn" text="Prix payé" prefWidth="100"/>
            </columns>
        </TableView>
    </center>

    <!-- Actions sur billets (statut, transfert, remboursement) -->
    <bottom>
        <VBox spacing="12" style="-fx-padding: 15; -fx-background-color: #f7f9fb;">
            <HBox spacing="15" alignment="CENTER_LEFT">
                <Label text="Changer le statut du billet sélectionné :"/>
                <ComboBox fx:id="statutCombo" prefWidth="200"/>
                <Button text="Mettre à jour" onAction="#handleChangeStatut"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Transférer vers un autre client (email) :"/>
                <TextField fx:id="transferEmailField" promptText="email@client.com" HBox.hgrow="ALWAYS"/>
                <Button text="Transférer" onAction="#handleTransferTicket"/>
            </HBox>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Remboursement :"/>
                <Button text="Rembourser le billet sélectionné" onAction="#handleRefundTicket"
                        style="-fx-background-color: #c92a2a; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
